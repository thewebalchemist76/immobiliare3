{
  "title": "Immobiliare.it – Mobile API Scraper",
  "description": "Filtri di ricerca. city_id è obbligatorio ed è l’unico usato per la città.",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "max_items": {
      "title": "Max pagine",
      "description": "Numero massimo di pagine (25 annunci per pagina).",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "editor": "number"
    },
    "city_id": {
      "title": "City ID (Immobiliare)",
      "description": "ID numerico del comune (OBBLIGATORIO). Es: Roma=6737, Pescara=6790",
      "type": "integer",
      "editor": "number"
    },
    "municipality": {
      "title": "Nome città (solo display)",
      "description": "Nome della città solo per visualizzazione. NON usato per la ricerca.",
      "type": "string",
      "default": "",
      "editor": "textfield"
    },
    "operation": {
      "title": "Operazione",
      "description": "Vendita o affitto.",
      "type": "string",
      "default": "vendita",
      "enum": ["vendita", "affitto"],
      "editor": "select"
    },
    "min_price": {
      "title": "Prezzo minimo",
      "description": "Prezzo minimo (vendita: €, affitto: €/mese). Lascia vuoto per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "max_price": {
      "title": "Prezzo massimo",
      "description": "Prezzo massimo (vendita: €, affitto: €/mese). Lascia vuoto per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "min_size": {
      "title": "Superficie minima (m²)",
      "description": "Superficie minima in metri quadri.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "max_size": {
      "title": "Superficie massima (m²)",
      "description": "Superficie massima in metri quadri.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "min_rooms": {
      "title": "Locali minimi",
      "description": "Numero minimo di locali.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "max_rooms": {
      "title": "Locali massimi",
      "description": "Numero massimo di locali.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "bathrooms": {
      "title": "Bagni minimi",
      "description": "Numero minimo di bagni.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "garden": {
      "title": "Giardino",
      "description": "Filtro giardino.",
      "type": "string",
      "default": "Indifferente",
      "enumSuggestedValues": ["Indifferente", "privato", "comune"],
      "editor": "select"
    },
    "terrace": {
      "title": "Terrazzo",
      "description": "Solo immobili con terrazzo.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "balcony": {
      "title": "Balcone",
      "description": "Solo immobili con balcone.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "lift": {
      "title": "Ascensore",
      "description": "Solo immobili con ascensore.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "furnished": {
      "title": "Arredato",
      "description": "Solo immobili arredati.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "cellar": {
      "title": "Cantina",
      "description": "Solo immobili con cantina.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "pool": {
      "title": "Piscina",
      "description": "Solo immobili con piscina.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "exclude_auctions": {
      "title": "Escludi aste",
      "description": "Esclude immobili all’asta.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "virtual_tour": {
      "title": "Virtual tour",
      "description": "Solo annunci con virtual tour.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "keywords": {
      "title": "Parole chiave",
      "description": "Campo informativo (non usato dall’API).",
      "type": "string",
      "default": "",
      "editor": "textfield"
    }
  },
  "required": ["city_id"]
}
