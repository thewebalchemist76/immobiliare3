{
  "title": "Immobiliare.it – Mobile API Scraper (Autocomplete + Bounding Box)",
  "description": "Ricerca annunci per città/zona (autocomplete) oppure per bounding box (points). Se points è presente, bypassa location_query/location_id.",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "max_items": {
      "title": "Max pagine",
      "description": "Numero massimo di pagine (25 annunci per pagina).",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "editor": "number"
    },

    "location_query": {
      "title": "Città / zona",
      "description": "Scrivi: es. Pescara, Chieti Scalo, Centro Storico. Ignorato se points è valorizzato.",
      "type": "string",
      "default": "",
      "editor": "textfield"
    },

    "location_id": {
      "title": "Location ID (override)",
      "description": "Opzionale. Bypassa l’autocomplete. Ignorato se points è valorizzato.",
      "type": "integer",
      "editor": "number"
    },

    "points": {
      "title": "Bounding box (points)",
      "description": "Poligono geografico: 'lat,lng lat,lng lat,lng lat,lng'. Se presente, sostituisce location_query.",
      "type": "string",
      "default": "",
      "editor": "textfield"
    },

    "operation": {
      "title": "Operazione",
      "description": "Vendita o affitto.",
      "type": "string",
      "default": "vendita",
      "enum": ["vendita", "affitto"],
      "editor": "select"
    },

    "order": {
      "title": "Ordinamento",
      "description": "Ordina gli annunci per data.",
      "type": "string",
      "default": "recent",
      "enum": ["recent", "oldest"],
      "editor": "select"
    },

    "min_price": {
      "title": "Prezzo minimo",
      "description": "Lascia vuoto per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },

    "max_price": {
      "title": "Prezzo massimo",
      "description": "Lascia vuoto per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },

    "min_size": {
      "title": "Superficie minima (m²)",
      "description": "Lascia vuoto/0 per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },

    "max_size": {
      "title": "Superficie massima (m²)",
      "description": "Lascia vuoto/0 per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },

    "min_rooms": {
      "title": "Locali minimi",
      "description": "Lascia vuoto/0 per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },

    "max_rooms": {
      "title": "Locali massimi",
      "description": "Lascia vuoto/0 per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },

    "garden": {
      "title": "Giardino",
      "description": "Filtro giardino.",
      "type": "string",
      "default": "Indifferente",
      "enumSuggestedValues": ["Indifferente", "privato", "comune"],
      "editor": "select"
    },

    "terrace": {
      "title": "Terrazzo",
      "description": "Solo immobili con terrazzo.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },

    "balcony": {
      "title": "Balcone",
      "description": "Solo immobili con balcone.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },

    "lift": {
      "title": "Ascensore",
      "description": "Solo immobili con ascensore.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },

    "furnished": {
      "title": "Arredato",
      "description": "Solo immobili arredati.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },

    "pool": {
      "title": "Piscina",
      "description": "Solo immobili con piscina.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },

    "exclude_auctions": {
      "title": "Escludi aste",
      "description": "Esclude immobili all’asta.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    }
  },
  "required": []
}
