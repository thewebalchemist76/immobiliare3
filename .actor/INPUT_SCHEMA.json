{
  "title": "Immobiliare.it – Mobile API Scraper (Autocomplete LIVE)",
  "description": "L’agente scrive una città/zona. L’actor risolve automaticamente l’ID via /geography/autocomplete (solo IT) e poi scarica gli annunci.",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "max_items": {
      "title": "Max pagine",
      "description": "Numero massimo di pagine (25 annunci per pagina).",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "editor": "number"
    },
    "location_query": {
      "title": "Città / zona",
      "description": "Scrivi: es. Pescara, Chieti Scalo, Centro Storico. Verrà risolta automaticamente (solo Italia).",
      "type": "string",
      "default": "",
      "editor": "textfield"
    },
    "location_id": {
      "title": "Location ID (override)",
      "description": "Opzionale. Se lo inserisci, bypassa la risoluzione automatica. Può essere comune (type=2) o zona/quartiere (type=3).",
      "type": "integer",
      "editor": "number"
    },
    "operation": {
      "title": "Operazione",
      "description": "Vendita o affitto.",
      "type": "string",
      "default": "vendita",
      "enum": ["vendita", "affitto"],
      "editor": "select"
    },
    "min_price": {
      "title": "Prezzo minimo",
      "description": "Lascia vuoto per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "max_price": {
      "title": "Prezzo massimo",
      "description": "Lascia vuoto per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "min_size": {
      "title": "Superficie minima (m²)",
      "description": "Lascia vuoto/0 per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "max_size": {
      "title": "Superficie massima (m²)",
      "description": "Lascia vuoto/0 per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "min_rooms": {
      "title": "Locali minimi",
      "description": "Lascia vuoto/0 per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "max_rooms": {
      "title": "Locali massimi",
      "description": "Lascia vuoto/0 per ignorare.",
      "type": "integer",
      "minimum": 0,
      "editor": "number"
    },
    "garden": {
      "title": "Giardino",
      "description": "Filtro giardino.",
      "type": "string",
      "default": "Indifferente",
      "enumSuggestedValues": ["Indifferente", "privato", "comune"],
      "editor": "select"
    },
    "terrace": {
      "title": "Terrazzo",
      "description": "Solo immobili con terrazzo.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "balcony": {
      "title": "Balcone",
      "description": "Solo immobili con balcone.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "lift": {
      "title": "Ascensore",
      "description": "Solo immobili con ascensore.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "furnished": {
      "title": "Arredato",
      "description": "Solo immobili arredati.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "pool": {
      "title": "Piscina",
      "description": "Solo immobili con piscina.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "exclude_auctions": {
      "title": "Escludi aste",
      "description": "Esclude immobili all’asta.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    }
  },
  "required": []
}
